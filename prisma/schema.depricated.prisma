generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ROLE {
    ADMIN
    MEMBER
    UNKNOWN
    CURATOR
}

model Organization {
    id                  Int                   @id @default(autoincrement())
    name                String?
    alias               String                @unique
    createdAt           DateTime              @default(now())
    updatedAt           DateTime              @default(now())
    locked              Boolean               @default(false)
    claims              Claim[]
    OrganizationCurator OrganizationCurator[]
    volonteers          Volonteer[]
}

model Claim {
    id             Int          @id() @default(autoincrement())
    organization   Organization @relation(fields: [organizationId], references: [id])
    volonteer      Volonteer    @relation(fields: [volonteerId], references: [id])
    organizationId Int
    volonteerId    Int
}

model Volonteer {
    id                  Int                   @id @default(autoincrement())
    role                ROLE                  @default(UNKNOWN)
    createdAt           DateTime              @default(now())
    updatedtAt          DateTime              @default(now())
    name                String
    tgIdHash            String                @unique
    tgUsername          String
    tgName              String
    tgChatId            String
    lastMessageType     String
    lastMessageText     String
    claim               Claim[]
    reports             Report[]
    OrganizationCurator OrganizationCurator[]
    Organization        Organization?         @relation(fields: [organizationId], references: [id])
    organizationId      Int?
}

model Report {
    id          Int       @id @default(autoincrement())
    createdAt   DateTime  @default(now())
    payload     String
    hash        String
    volonteer   Volonteer @relation(fields: [volonteerId], references: [id])
    volonteerId Int
}

model OrganizationCurator {
    id             Int          @id @default(autoincrement())
    organization   Organization @relation(fields: [organizationId], references: [id])
    volonteer      Volonteer    @relation(fields: [volonteerId], references: [id])
    organizationId Int
    volonteerId    Int
}
